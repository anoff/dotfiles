SPACESHIP_PROMPT_ADD_NEWLINE=false
SPACESHIP_PROMPT_SYMBOL=â–¶
SPACESHIP_TIME_SHOW=true
source "/Users/anoff/.dotfiles/zsh-custom//themes/spaceship.zsh-theme"

